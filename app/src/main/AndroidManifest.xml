<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.wyrmix.giantbombvideoplayer"
          tools:ignore="InnerclassSeparator">

    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- todo move these to debug manifest -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <application
        android:name="com.wyrmix.giantbombvideoplayer.GiantbombApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.wyrmix.giantbombvideoplayer.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.wyrmix.giantbombvideoplayer.onboarding.OnboardingActivity"
            android:label="@string/title_activity_onboarding"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name="com.wyrmix.giantbombvideoplayer.video.player.VideoActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="true"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.FullScreen"
            tools:targetApi="n" />
    </application>
</manifest>