<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>

        <item name="colorPrimary">@color/teal_400</item>
        <item name="colorPrimaryDark">@color/teal_600</item>
        <!-- <item name="android:navigationBarColor">@color/teal_400</item> -->
        <item name="colorAccent">@color/cyan_400</item>

    </style>

    <style name="ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/teal_400</item>
        <item name="android:height">@dimen/action_bar_size</item>
        <item name="android:titleTextStyle">@style/ActionBarStyleTitle</item>
    </style>

    <style name="ActionBarStyleTitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/grey_white_1000</item>
    </style>

</resources>
